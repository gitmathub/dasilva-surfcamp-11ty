{% macro threeCols(
  images=[{
    src:"/_assets/static/dasilva-surfcamp-logo.png",
    alt:"Da Silve Surfcamp",
    link:"https://dasilva-surfcamp.de"}]
  ) 
%}
  <div class="wrapper">
    {% for image in images%}
      <div class="tile">
        {% if image.link %}<a href="{{image.link}}">{% endif %}
          <img src="{{image.src}}"
           {% if image.alt %} alt="{{image.alt}}" {% endif %}
          />
        {% if image.link %}</a>{% endif %}
      </div>
    {% endfor %}
  </div>

  <style>

    .wrapper {
      margin: 0 5.0rem;
    }

    .wrapper > div {
      background-color: lightgrey;
      padding: 0;
      margin: 0.5rem;
    }

    .wrapper {
      display: grid;
      grid-template-columns: 1fr;
    }

    @media screen and (min-width: 900px) {

      .wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
      }
      .tile {}
    }
    img {
      object-fit: cover;
      width: 100%;
      height: 100%; // auto?
    }
  </style>

{% endmacro %}%}

