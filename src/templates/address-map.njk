{% macro twoColumns(address = "", introduction = "", imageSrc = "") %}

  <div class="address-map">
    <div class="address-map__container">
      <div class="address-map__left">
        {{ address }}
      </div>
      <div class="address-map__right">
        <a href="http://g.co/maps/9xh8n">
          <img src="{{ imageSrc }}" alt="Da Silve Surfcamp located on the map" class="address-map__image">
        </a>
      </div>
    </div>
  </div>

{% endmacro %}