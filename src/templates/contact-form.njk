<div class="form-wrapper centered">
  <form action="https://dasilva-surfcamp.de:45901/api/contact" method="post">
    {# <form action="http://localhost:3000/api/booking-request" method="POST"> #}
    <input name="apiKey" type="text" value="9e22b3ebc80a37028674c146a797aee3" hidden/>
    <input name="locale" type="text" value="{{ locale }}" hidden/>
    <div class="form-fields">
      <!-- name -->
      <div class="form-group">
        <div>
          <label for="name">{{ name.label }}
            <sup>&#x2605;</sup>
          </label>
        </div>
        <div>
          <input name="name" id="name"
              type="text"
              class="form-control"
              data-valueMissing="{{ valueMissing.hint }}"
              required/>
        </div>
      </div>
      <!-- email -->
      <div class="form-group">
        <div>
          <label for="email">{{ email.label }}
            <sup>&#x2605;</sup>
          </label>
        </div>
        <div>
          <input name="email" id="email" type="email"
            class="form-control"
            data-valueMissing="{{ valueMissing.hint }}"
            data-patternMismatch="{{ patternMismatch.email }}"
            required/>
        </div>
      </div>
      <div class="form-group">
        <div>
          <label for="comment">{{comment.label}}</label>
        </div>
        <textarea name="comment" id="comment" rows="6"></textarea>
      </div>
      <!-- send -->
      <div class="form-fields__submit">
        <input type="submit" value="{{submit.label}}">
      </div>
    </div>
  </form>
</div>